@model TourVm

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-lg-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MainPhoto" class="control-label"></label>
                <input asp-for="MainPhoto" class="form-control" / accept="image/*">
                <span asp-validation-for="MainPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoverPhoto" class="control-label">Second Photo</label>
                <input asp-for="HoverPhoto" class="form-control" / accept="image/*">
                <span asp-validation-for="HoverPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayCount" class="control-label"></label>
                <input asp-for="DayCount" class="form-control" />
                <span asp-validation-for="DayCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerCounts" class="control-label"></label>
                <input asp-for="PassengerCounts" class="form-control" />
                <span asp-validation-for="PassengerCounts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <input asp-for="Difficulty" class="form-control" />
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pickup" class="control-label"></label>
                <input asp-for="Pickup" class="form-control" />
                <span asp-validation-for="Pickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassangerAge" class="control-label"></label>
                <input asp-for="PassangerAge" class="form-control" />
                <span asp-validation-for="PassangerAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Airport" class="control-label"></label>
                <input asp-for="Airport" class="form-control" />
                <span asp-validation-for="Airport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingPoint" class="control-label"></label>
                <input asp-for="MeetingPoint" class="form-control" />
                <span asp-validation-for="MeetingPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expect" class="control-label"></label>
                <input asp-for="Expect" class="form-control" />
                <span asp-validation-for="Expect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Map" class="control-label"></label>
                <input asp-for="Map" class="form-control" />
                <span asp-validation-for="Map" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Category,"Id","Name"))" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Destination</label>
                <select asp-for="DestinationId" asp-items="@(new SelectList( ViewBag.Destination,"Id","Name"))" class="form-control"></select>
                <span asp-validation-for="DestinationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">iteneraries</label>
                <div class="form-group">
                    <select asp-for="Itineraries" asp-items="@(new SelectList(ViewBag.Itinerary,"Id","Day"))" class="form-control"></select>
                    <span asp-validation-for="Itineraries" class="text-danger"></span>
                </div>
                <span asp-validation-for="Itineraries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tour Dates</label>
                <select asp-for="TourDates" asp-items="@(new SelectList(ViewBag.Tourdate,"Id","TourDates"))" class="form-control"></select>
                <span asp-validation-for="TourDates" class="text-danger"></span>
            </div>
         
          

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
