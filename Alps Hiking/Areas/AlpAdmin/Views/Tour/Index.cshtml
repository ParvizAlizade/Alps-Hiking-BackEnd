@model IEnumerable<Alps_Hiking.Entities.Tour>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="text-center flex-wrap">
            <th  >
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th  >
                @Html.DisplayNameFor(model => model.DayCount)
            </th>
            <th  >
                @Html.DisplayNameFor(model => model.PassangerAge)
            </th>
            <th  >
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th  >
                @Html.DisplayNameFor(model => model.DiscountPrice)
            </th>
            <th  >
                @Html.DisplayNameFor(model => model.Destination)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center flex-wrap">
                <td  >
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td class ="col-lg-2">
                @Html.DisplayFor(modelItem => item.DayCount)
            </td>
                <td  >
                @Html.DisplayFor(modelItem => item.PassangerAge)+
            </td>
                <td  >
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.DiscountPrice)
            </td>
                <td  >
                @Html.DisplayFor(modelItem => item.Destination.Name)
            </td>
                <td>
                    <a style="padding:15px 30px;background-color:orange;border-radius:2px;color:black;font-weight:600" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a style="padding:15px 30px;background-color:dodgerblue;border-radius:2px;color:black;font-weight:600" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a style="padding:15px 30px;background-color:red;border-radius:2px;color:black;font-weight:600" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
<nav class="mt-3 d-flex justify-content-center" aria-label="...">
    <ul class="pagination">
        <li class="page-item  @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)" tabindex="-1">Previous</a>
        </li>
        @for (int i = 1; i <= ViewBag.TotalPage; i++)
        {
            <li class="page-item @(i==ViewBag.CurrentPage ? "active pointerNone" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }

        <li class="page-item @(ViewBag.TotalPage == ViewBag.CurrentPage ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
        </li>
    </ul>
</nav>