@model Alps_Hiking.Entities.Itinerary

@{
    ViewData["Title"] = "Create";
    List<Tour> tours = ViewBag.Tours;

}

<h1>Create</h1>

<h4>Itinerary</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-lg-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Day_count" class="control-label"></label>
                <input min="0" asp-for="Day_count" class="form-control" />
                <span asp-validation-for="Day_count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tour" class="control-label"></label>
                <select asp-for="TourId" asp-items="@(new SelectList(ViewBag.Tours,"Id","Name"))" class="form-control"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
