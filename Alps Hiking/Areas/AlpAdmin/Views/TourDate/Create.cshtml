@model Alps_Hiking.Entities.TourDate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TourDate</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-lg-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TourDates" class="control-label"></label>
                <input asp-for="TourDates" class="form-control" />
                <span asp-validation-for="TourDates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tour" class="control-label"></label>
                <select asp-for="TourId" class="form-control" asp-items="@(new SelectList(ViewBag.Tour,"Id","Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaxPassengerCount" class="control-label"></label>
                <input min="1" asp-for="MaxPassengerCount" class="form-control" />
                <span asp-validation-for="MaxPassengerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
