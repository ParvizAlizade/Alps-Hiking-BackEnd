@model List<WishListItem>
@section Link {
    <link rel="stylesheet" href="~/assets/scss/tours.css">
}
@{
	List<Slider> sliders = ViewBag.Slider;
}
<section id="slider">
    <div class="content">
        <div class="image">
            <img src="~/assets/images/SectionImages/@sliders.Find(s=>s.Title=="Our Tours").ImagePath" alt="">
        </div>
        <h1 style="font-size:66px" class="d-lg-block d-md-none d-sm-none">My WishList</h1>
    </div>
</section>


<div class="container " id="allsection">
            <div class="row w-100">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="fw-normal mb-0  text-black">Wish List</h1>
                    </div>

            <div id="alltours" class="overflow-visible justify-content-around d-flex flex-wrap">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div style="position:relative" class="card featured-item">
                            <img class='tokenImage'
                                 src="~/assets/images/toursphotos/@item.Tour.TourImages.FirstOrDefault(ti=>ti.IsMain==true)?.Path"
                                 alt="NFT" />
                            <a asp-controller="tour" asp-action="RemoveFromWishList" asp-route-wishListItemId="@item.Id" style="padding:5px 10px;background-color:aliceblue;position:absolute;top:15px;right:10px;"><i style=" font-size:18px;" class="fa-solid fa-heart"></i></a>
                            <div class="title">
                                <svg version="1.1" xmlns="http://www.w3.org/2000/svg"
                                     xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                     viewBox="0 0 512 512" xml:space="preserve" style="fill: #ffa11a">
                                <path d="M397.413,199.303c-2.944-4.576-8-7.296-13.408-7.296h-112v-176c0-7.552-5.28-14.08-12.672-15.648
                                                c-7.52-1.6-14.88,2.272-17.952,9.152l-128,288c-2.208,4.928-1.728,10.688,1.216,15.2c2.944,4.544,8,7.296,13.408,7.296h112v176
                                                c0,7.552,5.28,14.08,12.672,15.648c1.12,0.224,2.24,0.352,3.328,0.352c6.208,0,12-3.616,14.624-9.504l128-288
                                                C400.805,209.543,400.389,203.847,397.413,199.303z"></path>
                                                                </svg>
                                <a asp-controller="Tour" asp-action="Details" asp-route-id="@item.Id">
                                    <span>@item.Tour.Name</span>
                                </a>
                            </div>
                            <div class="main d-flex justify-content-between ">
                                <div class='description'>
                                    <div class="duration">
                                        <i class="fa-regular fa-clock"></i>
                                        <span>@item.Tour.DayCount Day</span>
                                    </div>
                                    <div class="age">
                                        <i class="fa-solid fa-user-tie"></i>
                                        <span>Min Age: @item.Tour.PassangerAge +</span>
                                    </div>
                                   
                                </div>
                                <div class='priceinfo '>
                                    <div class="discountprice">
                                        <del>$@item.Tour.Price</del>
                                    </div>
                                    <div class="price">
                                        <p>$@item.Tour.DiscountPrice</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
                </div>
            </div>
        </div>