@model List<Comment>

@foreach (var comment in Model)
{
    <div style="display:flex;justify-content:space-between">
        <h5>@comment.User.Fullname</h5>
        @if (User.Identity.Name == comment.User.UserName)
        {
            <form method="post" asp-controller="Tour" asp-action="DeleteComment" asp-route-commentId="@comment.Id" class="deleteArea">
                <button class="delete btn btn-danger">
                    Delete
                </button>
            </form>
        }
    </div>
    <p>@comment.Text</p>
    <small class="text-muted">Posted on <b>@comment.TimeStamp</b></small>
    <hr>
}
